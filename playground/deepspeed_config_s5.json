
{
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": "auto",
            "betas": "auto",
            "eps": "auto",
            "weight_decay": "auto"
        }
    },

    "bf16": {
        "enabled": true
    },

    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": "auto",
            "warmup_max_lr": "auto",
            "warmup_num_steps": "auto"
        }
    },

    "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
                "device": "cpu"
        },
        "contiguous_gradients": true,
        "overlap_comm": true
      },

      "train_micro_batch_size_per_gpu": 4,
      "gradient_accumulation_steps": "auto"
}